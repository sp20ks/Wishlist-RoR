<div class='div-form animation-div' id='form-new-session'>
  <%= form_with url: session_path, class: 'my-form' do |form| %>
    <div class = 'form-group'>
      <%= form.label :login, 'Логин', id: 'label_log' %>
      <%= form.text_field :login, class: 'form-control', id: 'login' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :pass_label, 'Пароль', id: 'label_pass' %>
      <%= form.password_field :password, class: 'form-control', id: 'pass' %>
    </div>
    <div class = 'form-group'>
      <%= link_to 'Забыл пароль', '/password/index', class: 'link-dark'%>
      <%= form.submit('Войти', id: 'log_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
  <%= link_to 'Ещё нет аккаунта? Тогда регистрируйся :)', '/users/new', class: 'link-dark'%>
</div>