<div class='div-form animation-div' id='form-new-session'>
  <%= form_with url: session_path, class: 'my-form' do |form| %>
    <div class = 'form-group'>
      <%= form.label :login, t('passwords.index.login'), id: 'label_log' %>
      <%= form.text_field :login, class: 'form-control', id: 'login' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :pass_label, t('passwords.new_password.password'), id: 'label_pass' %>
      <%= form.password_field :password, class: 'form-control', id: 'pass' %>
    </div>
    <div class = 'form-group'>
      <%= link_to t('.forgot'), password_index_path, class: 'link-dark'%>
      <%= form.submit(t('.enter'), id: 'log_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
  <%= link_to t('.no_account'), users_new_path, class: 'link-dark'%>
</div>