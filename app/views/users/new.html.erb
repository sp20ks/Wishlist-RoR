<div class='div-form animation-div'>
  <%= form_with scope: :user, url: users_path, class: 'my-form', data: {turbo: false} do |form| %>
    <div class = 'form-group'>
      <%= form.label :f_name, t('users.edit.name'), id: 'label_name' %>
      <%= form.text_field :f_name, class: 'form-control', id: 'name' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :l_name, t('users.edit.last_name'), id: 'label_l_name' %>
      <%= form.text_field :l_name, class: 'form-control', id: 'l_name' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :email, t('users.info_about_user.email'), id: 'label_em' %>
      <%= form.text_field :email, class: 'form-control', id: 'email' %>
      <small id="emailHelp" class="form-text text-muted"><%= t('.tell') %></small>
    </div>
    <div class = 'form-group'>
      <%= form.label :login, t('passwords.index.login'), id: 'label_log' %>
      <%= form.text_field :login, class: 'form-control', id: 'log' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :pass, t('passwords.new_password.password'), id: 'label_pass' %>
      <%= form.password_field :password, class: 'form-control', id: 'pass' %>
    </div>
        <div class = 'form-group'>
      <%= form.label :pass_c, t('passwords.new_password.rep_password'), id: 'label_pass_c' %>
      <%= form.password_field :password_confirmation, class: 'form-control', id: 'pass_c' %>
    </div>
    <div class = 'form-group'>
      <%= link_to t('.have_acc'), home_path, class: 'link-dark'%>
      <%= form.submit(t('.reg'), id: 'reg_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
</div>