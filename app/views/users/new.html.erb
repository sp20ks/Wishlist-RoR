<div class='div-form animation-div'>
  <%= form_with scope: :user, url: users_path, class: 'my-form', data: {turbo: false} do |form| %>
    <div class = 'form-group'>
      <%= form.label :f_name, 'Имя', id: 'label_name' %>
      <%= form.text_field :f_name, class: 'form-control', id: 'name' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :l_name, 'Фамилия', id: 'label_l_name' %>
      <%= form.text_field :l_name, class: 'form-control', id: 'l_name' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :email, 'Почта', id: 'label_em' %>
      <%= form.text_field :email, class: 'form-control', id: 'email' %>
      <small id="emailHelp" class="form-text text-muted">Мы никому не расскажем.</small>
    </div>
    <div class = 'form-group'>
      <%= form.label :login, 'Логин', id: 'label_log' %>
      <%= form.text_field :login, class: 'form-control', id: 'log' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :pass, 'Пароль', id: 'label_pass' %>
      <%= form.password_field :password, class: 'form-control', id: 'pass' %>
    </div>
        <div class = 'form-group'>
      <%= form.label :pass_c, 'Повторите пароль', id: 'label_pass_c' %>
      <%= form.password_field :password_confirmation, class: 'form-control', id: 'pass_c' %>
    </div>
    <div class = 'form-group'>
      <%= link_to 'У меня есть аккаунт', home_path, class: 'link-dark'%>
      <%= form.submit('Зарегистрироваться', id: 'reg_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
</div>