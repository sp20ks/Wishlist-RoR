<div class='div-form'>
  <%= form_with class: 'my-form', url: session_path do |form| %>
    <div class = 'form-group'>
      <%= form.label :email, 'Имя', id: 'label_name' %>
      <%= form.text_field :name, class: 'form-control', id: 'name' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :email, 'Фамилия', id: 'label_l_name' %>
      <%= form.text_field :l_name, class: 'form-control', id: 'l_name' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :email, 'Почта', id: 'label_em' %>
      <%= form.text_field :email, class: 'form-control', id: 'email' %>
      <small id="emailHelp" class="form-text text-muted">Мы никому не расскажем.</small>
    </div>
    <div class = 'form-group'>
      <%= form.label :email, 'Логин', id: 'label_log' %>
      <%= form.text_field :email, class: 'form-control', id: 'email' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :password, 'Пароль', id: 'label_pass' %>
      <%= form.password_field :password, class: 'form-control', id: 'pass' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :password, 'Подтверждение пароля', id: 'label_pass' %>
      <%= form.password_field :confirmation_password, class: 'form-control', id: 'pass' %>
    </div>
    <div class = 'form-group'>
      <%= link_to 'У меня есть аккаунт', home_path, class: 'link-dark'%>
      <%= form.submit('Зарегистрироваться', id: 'reg_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
</div>