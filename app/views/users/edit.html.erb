<div id='edit' class='div-form'>
  <div class='div-form'>
    <%= form_with scope: :user, url: update_path, class: 'my-form', data: {turbo: false} do |form| %>
      <div class = 'form-group'>
        <%= form.label :f_name, 'Имя', id: 'label_name' %>
        <%= form.text_field :f_name, class: 'form-control', id: 'name' %>
      </div>
      <div class = 'form-group'>
        <%= form.label :l_name, 'Фамилия', id: 'label_l_name' %>
        <%= form.text_field :l_name, class: 'form-control', id: 'l_name' %>
      </div>
      <div class = 'form-group'>
        <%= form.label :login, 'Логин', id: 'label_log' %>
        <%= form.text_field :login, class: 'form-control', id: 'log' %>
      </div>
      <div class = 'form-group'>
        <%= form.label :birth, 'День рождения', id: 'label_b' %>
        <%= form.text_field :birth, class: 'form-control', id: 'birth' %>
      </div>
      <div class = 'form-group'>
        <%= form.submit('Изменить данные', id: 'update_btn',  class: 'btn btn-outline-dark') %>
      </div>
    <% end %>
  </div>
  <div id='links'>
    <ul>
      <li><%= link_to 'Редактировать данные', edit_user_path, id: 'edit_data', class: 'text-dark' %></li>
      <li><%= link_to 'Сбросить пароль', '', id: 'edit_password', class: 'text-dark' %></li>
      <li><%= link_to 'Удалить аккаунт', delete_user_path, id: 'delete_p', class: 'text-dark' %></li>
      <li><%= link_to 'Вернуться обратно', wishlist_path, id: 'to_wishlist', class: 'text-dark' %></li>
    </ul>
  </div>
</div>