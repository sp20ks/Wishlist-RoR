<div class='div-form'>
  <%= form_with class: 'my-form', url: '/password/forgot' do |form| %>
    <div class = 'form-group'>
      <%= form.label :login, 'Логин', id: 'label_log' %>
      <%= form.text_field :login, class: 'form-control', id: 'log' %>
    </div>
    <div class = 'form-group'>
      <%= link_to 'Я вспомнил пароль', home_path, class: 'link-dark' %> 
      <%= form.submit('Отправить email', id: 'reg_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
</div>