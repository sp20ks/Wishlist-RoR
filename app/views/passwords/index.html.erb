<div class='div-form animation-div' id='input-login'>
  <%= form_with class: 'my-form', url: password_forgot_path do |form| %>
    <div class = 'form-group'>
      <%= form.label :login, t('.login'), id: 'label_log' %>
      <%= form.text_field :login, class: 'form-control', id: 'log' %>
    </div>
    <div class = 'form-group'>
      <%= link_to t('.i_rememb'), home_path, class: 'link-dark' %> 
      <%= form.submit(t('.email_send'), id: 'reg_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
</div>