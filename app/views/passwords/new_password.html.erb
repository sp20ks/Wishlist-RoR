<div class='div-form'>
  <%= form_with class: 'my-form', url: '/password/reset' do |form| %>
    <div class = 'form-group'>
      <%= form.label :pass, 'Пароль', id: 'label_pass' %>
      <%= form.password_field :password, class: 'form-control', id: 'pass' %>
    </div>
        <div class = 'form-group'>
      <%= form.hidden_field :token, value: params[:id] %>
    </div>
        <div class = 'form-group'>
      <%= form.label :pass_c, 'Повторите пароль', id: 'label_pass_c' %>
      <%= form.password_field :password_confirmation, class: 'form-control', id: 'pass_c' %>
    </div>
    <div class = 'form-group'>
      <%= form.submit('Сбросить пароль', id: 'reg_btn',  class: 'btn btn-outline-dark') %>
    </div>
  <% end %>
</div>