
<%= turbo_frame_tag "modal" do %>
  <%= form_with class: 'my-form' do |form| %>
  <%# костыль ужас. убрать потом.... %>
    <%= form.hidden_field :user, value: current_user %>
    <div class = 'form-group'>
      <%= form.label :name, 'Название' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :link, 'Ссылка'%>
      <%= form.text_field :link, class: 'form-control' %>
    </div>
    <div class = 'form-group'>
      <%= form.label :desc, 'Описание'%>
      <%= form.text_field :login, class: 'form-control' %>
      <small id="emailHelp" class="form-text text-muted">Расскажите поподробнее о этом товаре. Хотите ли вы сами его купить или когда хотели бы получить в подарок</small>
    </div>
    <div class = 'form-group'>
      <%= link_to 'Закрыть', '/gifts/show', class: 'link-dark'%>
      <%= form.submit 'Добавить', id: 'add_btn',  class: 'btn btn-outline-dark', style: 'width: 50%;'%>
    </div>
  <% end %>
<% end %>